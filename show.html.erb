<div class="row">
  <div class="col s12">
    <ul class="card-panel collection with-header">
      <li class="collection-header">
        <h4>
          Stats for <%= link_to visit_url(@url.short_url), visit_path(@url.short_url) %>
        </h4>
      </li>
      <li class="collection-item">Created <%= @url.created_at.strftime('%b %d, %Y') %></li>
      <li class="collection-item">
        Original URL: <%= link_to @url.original_url %>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="card-panel">
    <strong>Total clicks</strong>
      <div id="total-clicks-chart">
        <%= line_chart Click.where(url_id: @url.id).group_by_day(:created_at).count %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s6">
    <div class="card-panel">
      <strong>Platforms</strong>
      <div id="platforms-chart">
        <%= pie_chart Click.where(url_id: @url.id).group(:platform).count %>
      </div>
    </div>
  </div>

  <div class="col s6">
    <div class="card-panel">
      <strong>Browsers</strong>
      <div id="browsers-chart">
        <%= pie_chart Click.where(url_id: @url.id).group(:browser).count %>
      </div>
    </div>
  </div>
</div>